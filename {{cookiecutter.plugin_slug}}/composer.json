{
    "name": "{{ cookiecutter.vendor_slug }}/{{ cookiecutter.plugin_slug }}",
    "version": "{{ cookiecutter.version }}",
    "description": "{{ cookiecutter.plugin_description }}",
    "license": "{{ cookiecutter.license }}",
    "type": "wordpress-plugin",
    "authors": [
        {
            "name": "{{ cookiecutter.author_name }}",
            "homepage": "{{ cookiecutter.author_uri }}"
        }
    ],
    "autoload": {
        "psr-4": {
            "{{ cookiecutter.composer_namespace }}\\": "src/"
        }
    },
    "require": {
        "php": ">={{ cookiecutter.requires_php }}"
{% if cookiecutter.include_guzzle | lower in ['yes', 'true', '1'] %},
        "guzzlehttp/guzzle": "^7.0"
{% endif %}
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "build": "composer install --no-dev --optimize-autoloader"
    },
    "scripts-descriptions": {
        "build": "Install production dependencies and optimize autoloader"
    }
}
